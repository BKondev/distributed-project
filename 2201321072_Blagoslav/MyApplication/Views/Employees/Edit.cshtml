@model ManagementApp.ViewModels.Employees.EditVM
@{
}

<h2> Edit Employee</h2>

<form id="editEmployeeForm" action="/Employees/Edit" method="post">
    <div>
        <div class="grid">
            @Html.HiddenFor(m => m.Employee.Id)
            @Html.HiddenFor(m => m.Employee.RegisteredOn)
            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Employee.FirstName)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Employee.FirstName)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Employee.FirstName)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Employee.LastName)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Employee.LastName)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Employee.LastName)
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Employee.EmailAddress)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Employee.EmailAddress)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Employee.EmailAddress)
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Employee.Salary)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Employee.Salary)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Employee.Salary)
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-1">
                    @Html.LabelFor(m => m.Employee.IsFullTime)
                </div>
                <div class="col-2">
                    @Html.CheckBoxFor(m => m.Employee.IsFullTime)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Employee.IsFullTime)
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-3">
                    @Html.ValidationMessage("summaryError")
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" class="right" value="Save" />
                    <a href="/Employees/Index" class="right">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>